    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch API to Swagger",
            "configurations": ["Python: FastAPI", "Launch Firefox to API docs"]
        }
    ],
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload"
            ],
        },
        {
            "name": "Launch Firefox to API docs",
            "type": "firefox",
            "request": "launch",
            "url": "http://127.0.0.1:8000/docs"
        }
    ]
}